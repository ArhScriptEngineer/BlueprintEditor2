<Window x:Class="BlueprintEditor2.SelectBlueprint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueprintEditor2"
        xmlns:res="clr-namespace:BlueprintEditor2.Resource"
        mc:Ignorable="d"
        Title="SE BlueprintEditor" Height="500" Width="650" MinWidth="650" MinHeight="500" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static res:Lang.AboutProg}" Click="WindowsMenuItemAbout_Click">
                <MenuItem.Icon>
                    <Image Source="Resource\about.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Rectangle Fill="Black" Margin="365,10,10,284" Stroke="Black"/>

        <Image x:Name="BluePicture" Margin="365,10,10,284" Source="Resource/blueprints-textures_00394054.jpg">
            <Image.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static res:Lang.Normalize}" Click="PicMenuItemNormalize_Click">
                        <MenuItem.Icon>
                            <Image Source="Resource\img_894.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="{x:Static res:Lang.AboutProg}" Click="WindowsMenuItemAbout_Click">
                        <MenuItem.Icon>
                            <Image Source="Resource\about.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Image.ContextMenu>
        </Image>

        <TextBlock x:Name="BlueText" Margin="365,0,10,35" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="244" Text=""/>
        <ListBox x:Name="BlueList" HorizontalAlignment="Left" Margin="10,10,0,10" Width="343" SelectionChanged="BlueList_SelectionChanged">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static res:Lang.ViewFold}" Click="SelectorMenuItemFolder2_Click">
                        <MenuItem.Icon>
                            <Image Source="Resource\img_308586.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="{x:Static res:Lang.BlueFolder}" Click="SelectorMenuItemFolder_Click">
                        <MenuItem.Icon>
                            <Image Source="Resource\img_308586.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="{x:Static res:Lang.AboutProg}" Click="WindowsMenuItemAbout_Click">
                        <MenuItem.Icon>
                            <Image Source="Resource\about.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <Button x:Name="EditButton" Content="{x:Static res:Lang.Edit}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="117" IsEnabled="False" Click="EditButton_Click"/>
        <Button x:Name="BackupButton" Content="{x:Static res:Lang.Backups}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="145" Margin="0,0,132,10" IsEnabled="False" Click="BackupButton_Click"/>

    </Grid>
</Window>
