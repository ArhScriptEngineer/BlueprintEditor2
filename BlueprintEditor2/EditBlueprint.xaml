<Window x:Class="BlueprintEditor2.EditBlueprint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueprintEditor2"
        xmlns:res="clr-namespace:BlueprintEditor2.Resource"
        mc:Ignorable="d"
        Title="SE BlueprintEditor" Height="600" Width="1200" WindowStartupLocation="CenterScreen" Closing="Window_Closing" MinHeight="600" MinWidth="1200">
    <Window.Resources>
        <Style TargetType="GridViewColumnHeader">
            <EventSetter Event="MouseUp" Handler="GoSort"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image x:Name="BluePicture" Margin="10,10,0,0" Source="Resource/blueprints-textures_00394054.jpg" HorizontalAlignment="Left" VerticalAlignment="Top" Height="120" Width="200" Stretch="UniformToFill"/>
        <ListBox x:Name="GridList" HorizontalAlignment="Left" Width="200" Margin="10,161,0,10" SelectionChanged="GridList_SelectionChanged"/>
        <Label Content="{x:Static res:Lang.GridCount}" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>
        <Label Content="{x:Static res:Lang.BlockCount}" HorizontalAlignment="Left" Margin="215,135,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="BlockList" HorizontalAlignment="Left" Width="350" Margin="215,161,0,10" SelectionChanged="BlockList_SelectionChanged_1">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=DisplayType}" Header="{x:Static res:Lang.BlockType}" Width="160"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="{x:Static res:Lang.Name}" Width="170"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
